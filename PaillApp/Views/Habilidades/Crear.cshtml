@model PaillApp.Models.EmpleadoHabilidadViewModel


@{
    ViewData["Title"] = "Crear";
}


<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Agregar Habilidades Empleado</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form method="post" asp-action="Crear">
                <div class="form-group">
                    <label asp-for="IdEmpleado"></label>
                    <select asp-for="IdEmpleado" class="form-control" asp-items="@(new SelectList(ViewBag.Empleados, "Value", "Text", "Selected"))">
                        <option value="">Seleccione un Habilidad</option>
                    </select>
                    <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NombreHabilidad"></label>
                    <select asp-for="NombreHabilidad" class="form-control" asp-items="@(new SelectList(ViewBag.Habilidades))">
                        <option value="">Seleccione un Habilidad</option>
                    </select>
                    <span asp-validation-for="NombreHabilidad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <a class="btn btn-outline-primary" asp-action="Index" asp-controller="Home">Cancelar</a>
                    <input type="submit" value="Agregar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}