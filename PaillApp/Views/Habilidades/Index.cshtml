@model IEnumerable<PaillApp.Models.EmpleadoHabilidadViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    @if (TempData["succes"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["succes"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (TempData["warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["warning"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-md-12">
            <h3>Listado de habilidades por Empleado</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @if (Model.Count() > 0)
            {

                <table id="areas" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <td>@Html.DisplayNameFor(m => m.IdHabilidad)</td>
                            <td>@Html.DisplayNameFor(m => m.IdEmpleado)</td>
                            <td>@Html.DisplayNameFor(m => m.NombreHabilidad)</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdHabilidad</td>
                                <td>@item.IdEmpleado</td>
                                <td>@item.NombreHabilidad</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No existen registros</p>
            }
        </div>
    </div>
</div>


    @section Scripts{
        <script type="text/javascript">
            $(document).ready(function () {
                $('#areas').DataTable({
                    responsive: true
                });
            });
        </script>
    }
