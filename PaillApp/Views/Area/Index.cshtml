@model IEnumerable<PaillApp.Models.AreaViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    @if (TempData["succes"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["succes"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (TempData["warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["warning"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <h3>Listado de Áreas</h3>
        </div>
        <div class="col-md-6">
            <a class="btn btn-primary d-block" asp-action="Create" asp-controller="Area">Agregar</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @if (Model.Count() > 0)
            {

                <table id="areas" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <td>@Html.DisplayNameFor(m => m.IdArea)</td>
                            <td>@Html.DisplayNameFor(m => m.Nombre)</td>
                            <td>@Html.DisplayNameFor(m => m.Descripcion)</td>
                            <td>Acciones</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdArea</td>
                                <td>@item.Nombre</td>
                                <td>@item.Descripcion</td>
                                <td>
                                    <a asp-controller="Area" asp-action="Update" asp-route-id="@item.IdArea" class="btn btn-warning"><img src="~/svg/edit-regular.svg" alt="" width="15" height="15" /></a>
                                    <a asp-controller="Area" asp-action="Delete" asp-route-id="@item.IdArea" class="btn btn-danger"><img src="~/svg/trash-alt-regular.svg" alt="" width="15" height="15" /></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No existen registros</p>
            }
        </div>
    </div>
</div>


@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#areas').DataTable({
                responsive: true
            });
        });
    </script>
}